<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_background"
    android:orientation="vertical">

    <include layout="@layout/personal_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_16">


            <RelativeLayout
                android:id="@+id/edit_Avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="@string/edit_avatar"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.CardView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/continue1"
                    app:cardCornerRadius="32dp">

                    <ImageView
                        android:id="@+id/iv_edit_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/ic_launcher_round" />
                </android.support.v7.widget.CardView>


                <ImageView
                    android:id="@+id/continue1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_logout" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="@string/edit_bg"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.CardView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/continue6"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/iv_edit_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/spare_time_for_u"
                        app:srcCompat="@mipmap/ic_launcher_round" />
                </android.support.v7.widget.CardView>


                <ImageView
                    android:id="@+id/continue6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_logout" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_Nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="@string/edit_nickname"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_edit_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/continue2"
                    android:layout_weight="1"

                    android:textColor="#aaa" />

                <ImageView
                    android:id="@+id/continue2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_logout" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_Sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="@string/edit_sex"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_edit_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/continue3"
                    android:layout_weight="1"

                    android:textColor="#aaa" />

                <ImageView
                    android:id="@+id/continue3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_logout" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_Phonecall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="@string/edit_phone"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_edit_phonecall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/continue4"

                    android:textColor="#aaa" />

                <ImageView
                    android:id="@+id/continue4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_logout" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_Signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:text="@string/edit_signature"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_edit_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/continue5"
                    android:layout_weight="1"
                    android:textColor="#aaa" />

                <ImageView
                    android:id="@+id/continue5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_logout" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/touch_bg_pink"
                android:text="@string/edit_confirm"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</android.widget.LinearLayout>